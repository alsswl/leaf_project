<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Leaf" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="calender">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:fontFamily">@font/font_light</item>

    </style>
    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
       <item name="fontFamily">@font/font_light</item>
        <item name="android:headerBackground">@color/main_green</item>
        <item name="colorControlActivated">@color/main_green</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/main_ivory</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="colorAccent">@color/main_green</item>
        <item name="android:textColorSecondary">#094E0B</item>
        <item name="android:colorActivatedHighlight">@color/main_green</item>
        <item name="android:colorForeground">@color/main_green</item>
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorSecondary">@color/main_green</item>
    </style>
</resources>